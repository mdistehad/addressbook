{% extends 'base.html.twig' %}

{% block title %} Addressbook{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3> Contact List</h3>
        </div>
        <div class="card-body">
            {% if contacts %}
                <table id="contacts" class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.firstname }}</td>
                            <td>{{ contact.lastname }}</td>
                            <td>{{ contact.phone }}</td>
                            <td>{{ contact.email }}</td>
                            <td>
                                <a href="/contact/details/{{ contact.id }}" class="btn btn-info">Details</a>
                                <a href="/contact/edit/{{ contact.id }}" class="btn btn-primary">Edit</a>
                                <a href="#" class="btn btn-danger delete-contact" data-id="{{ contact.id }}">Delete</a>
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No Contacts</p>
            {% endif %}
        </div>
    </div>


{% endblock %}

