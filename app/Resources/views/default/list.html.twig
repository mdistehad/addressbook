{% extends 'base.html.twig' %}

{% block title %} Addressbook{% endblock %}

{% block body %}
    {% if contacts %}
        <table id="contacts" class="table table-striped">
            <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Mobile</th>
                <th scope="col">Picture</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.firstname }}</td>
                    <td>{{ contact.lastname }}</td>
                    <td>{{ contact.phone }}</td>
                    <td>{{ contact.picture }}</td>
                    <td>
                        <a href="/contact/show/{{ contact.id }}" class="btn btn-dark">Details</a>
                        <a href="/contact/edit/{{ contact.id }}" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger delete-contact" data-id="{{ contact.id }}">Delete</a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Contacts</p>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}